@*É o que muda quando se passa o parãmetro*@
@model IEnumerable<TodoWeb.Models.Usuario>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container"> 
        <table class="table table-hover">
            <tr>
                <th>UsuarioId</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Senha</th>
                <th>Ações</th>
                <th>Ações</th>
            </tr>
            @*@@foreach (TodoWeb.Models.Usuario u in ViewBag.Usuarios ou var u in ViewBag.Usuarios ) // quando utiiza view bag
    // abaixo quando passa parâmetro*@
            @foreach(var u in Model) 
            {
            <tr>
                <td>@u.UsuarioId</td>
                <td>@u.Nome</td>
                <td>@u.Email</td>
                <td>@u.Senha</td>
                <td><a href="/Usuario/update/@u.UsuarioId">Editar</a>
                <td>
                    <a href="/Usuario/delete/@u.UsuarioId">Apagar</a>
                </td>

            </tr>
            }
        </table>
        <a class="btn btn-primary btn-sm" href="/Usuario/create">
        <span class="glyphicon glyphicon-plus"></span>
        Adicionar
        </a>
    </div>
</body>
</html>
